{
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/eslint-plugin-tslint": "^7.0.2",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3"
  },
  "scripts": {
    "lint": "eslint ./packages/formstr-app/src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint ./packages/formstr-app/src --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"./packages/formstr-app/**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "packages/formstr-app/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "packages/formstr-app/**/*.{json,md}": [
      "prettier --write"
    ]
  }
}
