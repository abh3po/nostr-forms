{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Response Spec Schema v1",
  "type": "array",
  "items": [
    {
      "type": "object",
      "properties": {
        "questionId": {
          "type": "string",
          "examples": ["23DSF1", "AA12D3"]
        },
        "answer": {
          "type": ["string", "number", "boolean"],
          "examples": ["Correct Answer", "Incorrect answer"]
        },
        "message": {
          "type": "string"
        }
      },
      "required": ["questionId", "answer"]
    }
  ]
}
